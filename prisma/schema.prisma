generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Sales_Fact {
  id          String          @id @default(uuid())
  total_price Decimal         @db.Decimal(10, 2)
  revenue     Decimal         @db.Decimal(10, 2)
  cost        Decimal         @db.Decimal(10, 2)
  products    SaleProduct[]
  customer_id String
  customer Customer_Dim @relation(fields: [customer_id], references: [id])
  date_id String
  date Date_Dim @relation(fields: [date_id], references: [id])

  @@map("sales_fact")
}

model Products_Dim {
  id            String             @id @default(uuid())
  product_name  String
  price         Decimal         @db.Decimal(10, 2)
  cost          Decimal         @db.Decimal(10, 2)
  category_id   String
  sales         SaleProduct[]

  @@map("products_dim")
}

model SaleProduct {
  id          String         @id @default(uuid())
  sale        Sales_Fact  @relation(fields: [sale_id], references: [id])
  sale_id      String
  product     Products_Dim @relation(fields: [product_id], references: [id])
  product_id   String
  quantity    Int         @default(1)

  @@unique([sale_id, product_id])

  @@map("saleproduct")
}
model Customer_Dim {
  id String @id @default(uuid())
  name String
  email String @unique
  addres String
  sales Sales_Fact[]

  @@map("customer_dim")
}

model Date_Dim {
  id String @id @default(uuid())
  sale_date DateTime
  day Int
  month Int
  year Int
  sales Sales_Fact[]

  @@map("date_dim")
}

